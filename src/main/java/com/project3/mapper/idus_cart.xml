<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="mapper.cart">
		
	<delete id="deletelist" parameterType="java.lang.reflect.Array">
		delete from idus_cart where cart_id in
		<foreach item="item" index="index" collection="array"
			open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>
    
   	<insert id="cartinsert">
		insert into idus_cart values('c_'||idus_cart_seq.nextval, #{uemail}, #{pid},
	       #{p_name}, #{p_qty}, #{p_opt}, #{p_price}, sysdate)
	</insert>
	
	<select id="cartlist" parameterType="java.lang.String" resultType="com.project3.vo.IdusCartVO">
		select * from idus_cart where uemail=#{uemail, jdbcType=VARCHAR} order by cdate
	</select>
	
	
	
	
	
</mapper>

